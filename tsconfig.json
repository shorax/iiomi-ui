{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "types": ["node", "react", "webpack-env"],
  },
  "include": ["src/**/*", "src/index.tsx"],
}